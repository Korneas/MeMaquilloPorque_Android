<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_maquillo"
    tools:context="com.camilomontoya.memaquilloporque.HomeActivity">

    <ImageView
        android:id="@+id/logo_home"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_maquillo" />

    <TextView
        android:id="@+id/content_home"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_home"
        android:layout_marginTop="-20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:text="Para comenzar la interacción porfavor danos tu nombre y presiona el botón"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/name_home"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo_home"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="Escribe tu nombre"
        android:textColorHint="#aaffffff"
        android:textAlignment="center" />

    <Button
        android:id="@+id/start_home"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_home"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="iniciar"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:backgroundTint="@color/colorPrimary"/>

    <include
        android:id="@+id/comment_home"
        layout="@layout/comment_lay"
        android:visibility="gone"></include>

</RelativeLayout>
